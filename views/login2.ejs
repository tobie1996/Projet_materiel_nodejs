<div style="height: 150px;"></div>

  <form class="form-signin mt-5" action="/infirmier_login" method="POST">
            <div class="form-group">
              <span class="text-center"> <h2 class="text-bg-info overflow-auto">Connexion infirmier</h2></span>
            </div>
            <div class="text-center">
            <div class="form-group">
            <input
              type="email" id="email" name="email" class="form-control border" placeholder=" Entrer votre adresse adresse email" required autofocus/>
            </div>
            <div class="form-group mt-2">
              <input  type="password" id="password" name="password" class="form-control border"  placeholder="Entrer votre le mot de passe"  required/>
            </div>
            <div class="form-group mt-5">
              <input type="submit" value="Connexion" class="btn btn-primary btn-outline-success btn-block text-white">
            </div>           
  </form>
</div>

<style>

  .form-signin {
    max-width: 500px;
    height: 300px;
    margin: 0 auto;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 0 20px rgba(25, 26, 25, 0.7);
  }
</style>

